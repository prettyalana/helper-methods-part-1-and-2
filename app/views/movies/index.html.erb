<hr>

<div>
  <%=link_to "Add a new movie", new_movie_path%>
</div>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Description
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.description %>
    </td>

    <td>
      <%= time_ago_in_words(a_movie.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(a_movie.updated_at) %> ago
    </td>

    <td>
      <!--<a href="<%#= movie_path(a_movie) %>">
        Show details
      </a>-->
      <%#= link_to "Show details", movie_path(a_movie)%>
      <%= link_to "Show details", a_movie%>
    </td>
  </tr>
  <% end %>
</table>
